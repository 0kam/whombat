# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_DB=whombat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=whombat

# ============================================
# Network Configuration
# ============================================
# WHOMBAT_DOMAIN: The domain or IP address where Whombat will be accessed
# - For remote access: Set to your server's IP (e.g., 192.168.1.100) or domain (e.g., whombat.example.com)
# - For local only: Use "localhost"
WHOMBAT_DOMAIN=158.210.76.175

# WHOMBAT_HOST: Network interface to bind to
# - Use "0.0.0.0" to allow remote access from any network interface
# - Use "localhost" or "127.0.0.1" for local-only access
WHOMBAT_HOST=0.0.0.0

# WHOMBAT_PORT: Backend server port
WHOMBAT_PORT=5000

# WHOMBAT_FRONTEND_PORT: Frontend server port
WHOMBAT_FRONTEND_PORT=3000

# WHOMBAT_PROTOCOL: Protocol for accessing Whombat (http or https)
WHOMBAT_PROTOCOL=http

# ============================================
# Audio Directory Configuration
# ============================================
# Path on the SERVER where audio files are stored
# NOTE: Leave commented out to use the web UI for initial configuration
# Users can change audio_dir through the web UI (setup page)
# WHOMBAT_AUDIO_DIR=/path/to/audio/files

# ============================================
# Development Mode
# ============================================
# Set to true for development mode (auto-reload, verbose logging)
WHOMBAT_DEV=true

# ============================================
# CORS Configuration (Advanced)
# ============================================
# CORS origins are automatically generated based on WHOMBAT_DOMAIN and WHOMBAT_FRONTEND_PORT
# Only set this if you need custom CORS origins
# Example: WHOMBAT_CORS_ORIGINS='["http://localhost:3000","http://192.168.1.100:3000"]'
# WHOMBAT_CORS_ORIGINS=
WHOMBAT_AUDIO_DIR=/home/okamoto/whombat_data
